(defcfg
    input (device-file "/dev/input/event0")
    output (uinput-sink "Venus KMonad Output")
    cmp-seq ralt 
    cmp-seq-delay 5 
    key-seq-delay 5 
    fallthrough true 
    allow-cmd false 
    implicit-around around
)


