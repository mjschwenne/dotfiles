(defsrc
    caps a    s    d    f    g    h    j    k    l    ;
)

(defalias
    met_a (tap-hold-next-release 175 a lmet)
    alt_s (tap-hold-next-release 175 s lalt)
    sft_d (tap-hold-next-release 175 d lsft)
    ctl_f (tap-hold-next-release 175 f lctl)

    ctl_j (tap-hold-next-release 175 (multi-tap 175 j j) rctl)
    sft_k (tap-hold-next-release 175 k rsft)
    alt_l (tap-hold-next-release 175 l lalt)
    met_; (tap-hold-next-release 175 ; rmet)
)

(deflayer homerowmods
    esc @met_a @alt_s @sft_d @ctl_f g h @ctl_j @sft_k @alt_l @met_;
)
